<h3>Group</h3>
<%=link_to 'Edit', edit_group_path(@group) %> | <%=link_to 'New', new_group_path %> | <%=link_to 'View All Groupsps', groups_path %></br></br>
<div class="row">
	<div class="col-md-12">	
		<div class="row">
			<div class="col-md-3">
				<b>Name </b>
			</div>
			<div class="col-md-7"><%= @group.name %></div>
		</div></br>
		<div class="row">
			<div class="col-md-3">
				<b>Details </b>
			</div>
			<div class="col-md-7"><%= @group.details %></div>
		</div>
	</div>
</div>

<h3>List Of Users </h3>

<div class="row">
	<div class="col-md-10">
		<% if @group.user_group_roles.present? %>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Name </th>
						<th>Email</th>
						<th>Gender</th>
						<th>Role</th>
					</tr>
				</thead>
				<tbody>
					<% @group.user_group_roles.each do |usr| %>
						<tr>
							<td><%= link_to(usr.user.name , usr.user) %></td>
							<td><%= usr.user.email %></td>
							<td><%= usr.user.gender %></td>
							<td><%= role_text(usr.role_id) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		<% else %>
			No Records Found
		<% end %>
	</div>
</div>
